<div class="row mt-5">
    <div class="col-md-6 m-auto" style="background-color:white; margin-left: 25%; border-radius:10px">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fa fa-user-circle-o" aria-hidden="true"></i> Register
        </h1>
        <!--<% include ./partials/messages %> --> 
        <!--could have put partials code directly but we need to use in login also-->
        <form action="/users/signup" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
            /> 
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Create Password"
            />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirm Password"
            />
          </div>
          <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
          <button type="submit" class="btn btn-primary btn-block">
            Register
          </button>
        </form>
        <p class="lead mt-4">Have An Account? <a href="/users/signin">Login</a></p>
      </div>
    </div>
  </div>